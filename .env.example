# =============================================================================
# Jack of Clubs - Environment variables
# =============================================================================
# Copy this file to .env and fill in your values.
#
# On Vercel: Project Settings → Environment Variables. Add each key below.
# (Vercel hosts the React frontend only; the Express API runs elsewhere if needed.)
# =============================================================================

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Comma-separated origins for CORS (e.g. https://yourapp.vercel.app,https://www.yourapp.vercel.app)
# Leave empty or omit to allow all origins (less secure).
ALLOWED_ORIGINS=

# -----------------------------------------------------------------------------
# OpenAI (optional – for transcription / text-to-speech)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# ElevenLabs (optional – for ElevenLabs text-to-speech)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=

